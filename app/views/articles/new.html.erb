<h2>New Article</h2>
<%= form_for @article do |f| -%>
  <%= f.error_messages %>

  <div class="clearfix">
    <label for="title"><strong>Title</strong></label>
    <div class="input"><%= f.text_field :title, :class => 'xxlarge' %></div>
  </div>

  <div class="clearfix">
    <label for="body"><strong>Body</strong></label>
    <div class="input"><%= f.text_area :body, :class => 'xxlarge' %></div>
  </div>

  <div class="actions">
    <%= f.submit :class => 'btn primary' %>
  </div>
<% end -%>
